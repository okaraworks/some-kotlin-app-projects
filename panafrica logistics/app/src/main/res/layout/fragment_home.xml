<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:gravity="center"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_marginLeft="50dp"


            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form for goods to be transported"


            />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="180dp"

            android:layout_margin="23dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            android:layout_width="500dp"
            android:layout_height="500dp">
            <LinearLayout
                android:layout_gravity="center"


                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <EditText
                    android:id="@+id/goodnm"
                    android:layout_marginTop="21dp"
                android:gravity="center"
                    android:background="@drawable/input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter your good/product name"

                    />
                <EditText
                    android:id="@+id/goodwt"
                    android:layout_marginTop="21dp"
                    android:gravity="center"
                    android:layout_height="45dp"
                    android:background="@drawable/input"
                    android:layout_width="match_parent"

                    android:hint="Enter your good/product weight"

                    />
                <EditText
                    android:id="@+id/goodardt"
                    android:layout_marginTop="21dp"
                    android:gravity="center"
                    android:background="@drawable/input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter date of arrival at storage"

                    />

                <Button
                    android:id="@+id/submitbtn"
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit good"

                    />



            </LinearLayout>






        </androidx.cardview.widget.CardView>

     <!--   <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp" />-->
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>