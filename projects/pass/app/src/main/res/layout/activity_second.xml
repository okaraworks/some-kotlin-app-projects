<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="98dp"

        android:src="@drawable/wall"

        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"


        >
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="21dp"
                android:textStyle="bold"
                android:text="Profits: 0 Kshs"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="12dp"
            app:cardCornerRadius="12dp"
            android:layout_height="250dp">

            <LinearLayout


                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <TextView
                    android:textStyle="italic|bold"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Winbetin Hack Bot"


                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:textStyle="italic|bold"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select amount"/>
                    <androidx.appcompat.widget.AppCompatSpinner
                   android:id="@+id/samount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:textStyle="italic|bold"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time in minutes"/>
                    <Spinner
                        android:id="@+id/spinnermin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:textStyle="italic|bold"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount per round"/>
                    <Spinner android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amntid"
                        />

                </LinearLayout>
 <!--               <LinearLayout
                    android:orientation="horizontal"
