<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:paddingRight="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/txv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/image_c"
                    android:text="Bananas"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_price_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/image_c"
                    android:text="Ksh 8944.00"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_price_c"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/image_c"
                    android:text="Capacity 50" />

                <TextView
                    android:id="@+id/txv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_capacity"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/image_c"
                    android:text="50"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_stock"
                    android:layout_toEndOf="@id/txv_stock"
                    android:src="@drawable/ic_edit" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>