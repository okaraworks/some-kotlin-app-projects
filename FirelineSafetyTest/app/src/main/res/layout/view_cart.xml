<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/txv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Bananas"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txv_price_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Ksh 8944.00"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_price_c"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="8"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_days"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Total 50"
                    android:textColor="#000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/txv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_subTotal"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Total 2510"
                    android:textColor="#000"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_c"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Update"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txv_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_c"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/txv_update"
                    android:text="Remove"
                    android:textColor="#DC1919"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>